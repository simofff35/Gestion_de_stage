<%- include('../partials/header.ejs') %>

<body class="">
  <style>
    body {
      background-image: url("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTr1unlIRhJsm06LidY1FxfSujFUAbX4aS-FnfZPAWcwQ6YutBX1aVEuxwbhEYQKyAG5r4&usqp=CAU");
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
    }
  </style>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-6 col-lg-7 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Espace Admin</h1>
              </div>
              <form class="user" method="post" novalidate>
                <!--  -->
                <div class="form-group">
                  <input
                    type="text"
                    class="form-control form-control-user"
                    placeholder="Nom d'utilisateur"
                    name="username"
                    required
                  />
                </div>
                <!--  -->
                <%- include('../inputs/pass1.ejs') %>
                <!--  -->
                <div class="form-group">
                  <div class="custom-control custom-checkbox small">
                    <input
                      type="checkbox"
                      class="custom-control-input"
                      id="customCheck"
                      name="remember"
                    />
                    <label class="custom-control-label" for="customCheck"
                      >Se souvenir de moi</label
                    >
                  </div>
                </div>
                <% if (pop) { %>
                <div class="alert alert-danger" role="alert"><%= pop %></div>
                <% } %>
                <button
                  type="submit"
                  class="btn btn-primary btn-user btn-block"
                >
                  Se connecter
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer.ejs') %>

  <script>
    (function () {
      "use strict";
      var form = document.querySelector(".needs-validation");
      form.addEventListener(
        "submit",
        function (event) {
          console.log("Form submitted");
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        },
        false
      );
    })();
  </script>
</body>
