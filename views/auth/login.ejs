<%- include('../partials/header.ejs') %>

<body class="bg-gradient-primary">
  <div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Bienvenue !</h1>
                  </div>
                  <form class="user needs-validation" method="post" novalidate>
                    <!--  -->
                    <%- include('../inputs/email.ejs') %>
                    <!--  -->
                    <%- include('../inputs/pass1.ejs') %>
                    <!--  -->
                    <div class="form-group">
                      <div class="custom-control custom-checkbox small">
                        <input
                          type="checkbox"
                          class="custom-control-input"
                          id="customCheck"
                          name="remember"
                        />
                        <label class="custom-control-label" for="customCheck"
                          >Se souvenir de moi</label
                        >
                      </div>
                    </div>
                    <% if (pop) { %>
                    <div class="alert alert-danger" role="alert">
                      <%= pop %>
                    </div>
                    <% } %>
                    <button
                      type="submit"
                      class="btn btn-primary btn-user btn-block"
                    >
                      Se connecter
                    </button>
                  </form>
                  <hr />
                  <div class="text-center">
                    <a class="small" href="/reset">Mot de passe oublié ?</a>
                  </div>
                  <div class="text-center">
                    <a class="small" href="/register">Créer un compte !</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer.ejs') %>

  <script>
    // Bootstrap validation script
    (function () {
      "use strict";
      // Fetch the login form element
      var form = document.querySelector(".needs-validation");
      // Add submit event listener to the form
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        },
        false
      );
    })();
  </script>
</body>
